generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = "postgres://postgres:postgres@localhost:5432/postgres"
}


model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email String @unique
  hash  String

  firstName String?
  lastName  String?

  challengesComplete ChallengeComplete[]

  @@map("users")
}

model Riddle {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  clue_1      String
  clue_2      String?
  answer      String

  userComplete ChallengeComplete[]

  @@map("riddles")
}

model ChallengeComplete {
  assignedAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id])
  userId  Int

  riddle    Riddle    @relation(fields: [riddleId], references: [id])
  riddleId  Int

  @@id([userId, riddleId])
}